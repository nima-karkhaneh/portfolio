<body>
<%- include("./partials/header.ejs") %>
<main id="main-content">
    <div>
       <h1>Welcome to Your Virtual Bookroom</h1>
       <p>Please add books to your library</p>
    </div>
    <p>OR</p>
    <a href="/books" class="btn">View your existing library</a>
    <p class="no-books-error">
        <% if (locals.error) { %>
            <i class="fas fa-exclamation-triangle"></i><%= error.message %>
        <% } %>
    </p>
</main>
<%- include("./partials/footer.ejs") %>
