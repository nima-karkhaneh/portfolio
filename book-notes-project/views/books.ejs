<!doctype html>
<html lang="1">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles/main.css">
    <script src="/styles/script.js" defer></script>
    <title>Books</title>
</head>
<body>
<%- include("./partials/header.ejs") %>
<main id="main-books">
    <form id="sort-form" action="/books" method="GET">
        <div id="sort-container">
            <label for="sort">Sort by:</label>
            <select name="sort" id="sort" onchange="this.form.submit()">
                <option value="">-- Please choose an option --</option>
                <option value="rating">Rating</option>
                <option value="date">Date Read</option>
                <option value="alphabet">Alphabet</option>
            </select>
        </div>
    </form>

    <% booksArr.forEach((book) => { %>
        <div class="book-container">
            <img class="book-cover" src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg" alt="book cover">
            <h2 class="book-title"><%= book.title %> - By <%= book.author %></h2>
            <p class="date-read">
                DATE READ: <%= new Date(book.date).toLocaleDateString('en-GB').replace(/\//g, '-') %>

            </p>
            <div class="ranking-display" data-book-id="<%= book.id %>">
                <% for(let i = 0; i < 5; i++) { %>
                    <i class="fa-solid fa-star star<%= book.id %> star-display"></i>
                <% } %>
            </div>
            <p class="review line-break-fix"><%= book.review %></p>
        </div>
        <p class="reader_name">READ BY: <%= book.reader_name %></p>
        <div id="edit-delete-container">
            <button class="delete" data-id="<%= book.id %>">Delete</button>
            <a href="/books/edit/<%= book.id %>"><button class="edit">Edit</button></a>
        </div>
    <% }) %>


</main>
<%- include("./partials/footer.ejs") %>
<script>
    // Accessing ratingData for star rating display
    window.ratingData = <%- JSON.stringify(starDisplay) %>;
</script>
</body>
</html>

