    <title>JournaLog - New - Posts</title>
</head>
<body>
<main>
<%- include("partials/header.ejs") %>
<form action="/submit" method="post">
    <h2>New Post</h2>
    <input type="text" name="author" placeholder="Author" autocomplete="off" required>
    <input type="text" name="title" placeholder="Title" autocomplete="off" required>
    <textarea name="text" id="" cols="60" rows="20" autocomplete="off" placeholder="Your blog"></textarea>
    <button type="submit">Submit</button>
</form>
<%- include("partials/footer.ejs") %>
</main>
</body>
</html>